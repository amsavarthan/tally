<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Tally" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="Theme.Tally.Dialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorAccent">@color/black</item>
        <item name="colorControlActivated">?attr/colorPrimary</item>
    </style>

    <style name="Theme.Tally.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="postSplashScreenTheme">@style/Theme.Tally</item>
    </style>
</resources>